<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFEF"
        android:layout_margin="8dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sender Omi"
            android:id="@+id/t1"
            android:layout_margin="4dp"
            android:textSize="@dimen/activity_horizontal_margin"

            android:textColor="#000000"
            android:textStyle="bold"
            android:paddingTop="8dp"
            />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="taggvhfggs"
            android:textColor="#000000"
            android:layout_margin="4dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_details_black_24dp"
            android:layout_below="@+id/t5"
            android:layout_alignParentEnd="true"
            android:background="#FFFFEF"
            android:id="@+id/imdb"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/t2"
            android:textColor="#000000"
            android:layout_below="@+id/t1"
            android:layout_margin="4dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Time"
            android:textColor="#000000"
            android:id="@+id/t3"
            android:layout_below="@+id/t2"/>
        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_below="@+id/t3"
            android:background="#000000">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/imageView"
                android:paddingBottom="5dp"
                />
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_left_black_24dp"
                android:layout_centerVertical="true"
                android:id="@+id/b1"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_keyboard_arrow_right_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/b2"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dresciption"
            android:layout_below="@+id/r1"
            android:padding="4dp"
            android:id="@+id/t4"
            android:layout_margin="4dp"
            android:autoLink="all"
            android:textColor="#000000"/>

    </RelativeLayout>
</android.support.v7.widget.CardView>
